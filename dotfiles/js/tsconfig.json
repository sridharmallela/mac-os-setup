{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es5", "es6", "es2017", "dom"],
    "pretty": true,
    "sourceMap": false,
    "importHelpers": true,
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "noStrictGenericChecks": true,
    "skipLibCheck": true,
    "noStrictPropertyInitialization": true,
    "baseUrl": ".",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "lib/**/*"
  ],
  "exclude": [
    "**/node_modules",
    "**/*.spec.ts",
    "**/*.e2e.ts",
    "**/*.js",
    "**/*.d.ts",
    "**/dist",
    "**/test",
    "**/e2e"
  ]
}
